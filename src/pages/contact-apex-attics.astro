            "mainEntity": {
                "@type": "LocalBusiness",
                "name": "Apex Attics",
                "description": "Apex Attics transforms unused roof spaces into safe, secure and accessible attic storage. Servicing the entire Central Coast region, we provide professional attic conversions, flooring, and ladder installations.",
                "url": "https://www.apexattics.com",
                "logo": "https://www.apexattics.com/attic-storage-conversion-experts.png",
                "image": "https://www.apexattics.com/attic-storage-conversion-experts.png",
                "telephone": "+61 424 808 378",
                "email": "info@apexattics.com",
                "priceRange": "$$",
                "areaServed": [
                    "Gosford",
                    "Wyong",
