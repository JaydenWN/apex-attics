---
const today = new Date();
import logoImage from "@icons/logo-footer.svg";
import { Image } from "astro:assets";
import FacebookIcon from "@icons/facebook-footer.svg";
import InstagramIcon from "@icons/instagram-footer.svg";
import PhoneIcon from "@icons/footer-phone.svg";
import MailIcon from "@icons/footer-email.svg";
import PinIcon from "@icons/footer-pin.svg";
import AbnIcon from "@icons/footer-abn.svg";
---

<footer>
	<div class="footer-container">
		<Image
			src={logoImage}
			alt="Central Coast attic conversion specialists"
			class="image"
		/>

		<div class="links">
			<div class="site-nav">
				<h3>Site Navigation</h3>
				<ul>
					<li>
						<a href="/">Home</a>
					</li>
					<li>
						<a href="/">Services</a>
					</li>
					<li>
						<a href="/">About</a>
					</li>
					<li>
						<a href="/">Contact</a>
					</li>
				</ul>
			</div>

			<div class="social-links">
				<h3>Social Links</h3>
				<ul>
					<li>
						<a href="/"><FacebookIcon class="icon" />Facebook</a>
					</li>
					<li>
						<a href="/"><InstagramIcon class="icon" />Instagram</a>
					</li>
				</ul>
			</div>

			<div class="contact-details">
				<h3>Contact Details</h3>
				<ul>
					<li>
						<a href="mailto:"
							><MailIcon class="icon" />Mail@emailchamp.com</a
						>
					</li>
					<li>
						<a href="tel:"
							><PhoneIcon class="icon" />+0412 232 242</a
						>
					</li>
					<li>
						<a href="mailto:"
							><PinIcon class="icon" />Central Coast, NSW, 2257</a
						>
					</li>
					<li>
						<a href="mailto:"
							><AbnIcon class="icon" />55 162 347 286</a
						>
					</li>
				</ul>
			</div>
		</div>
		<div class="beachside-link">
			<a href="https://www.beachsidewebdesigns.com"
				>&copy; {today.getFullYear()} Beachside Web Designs.</a
			>
		</div>
	</div>
</footer>

<style>
	footer {
		background-color: var(--dark-blue);
	}
	.footer-container {
		padding: 1rem;
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}
	.links {
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}
	.image {
		width: 166px;
		height: auto;
		object-fit: contain;
		margin-top: 1rem;
	}
	ul {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	h3 {
		font-size: 1.15rem;
		margin-bottom: 1rem;
		color: white;
		opacity: 0.8;
	}
	a {
		text-decoration: none;
		display: flex;
		color: white;
		opacity: 0.8;
		align-items: center;
		gap: 0.5rem;
	}
	.icon {
		min-width: 12px;
		height: auto;
	}

	.beachside-link {
		width: 100%;
		text-align: center;
	}

	.beachside-link a {
		display: inline-block;
		text-align: center;
		color: var(--orange);
	}

	@media (min-width: 768px) {
		.footer-container {
			padding: 4rem 4rem 1rem 4rem;
		}
		.site-nav {
			grid-area: site-nav;
		}
		.social-links {
			grid-area: social;
		}
		.contact-details {
			grid-area: contact;
		}
		.links {
			display: grid;
			grid-template-columns: 1fr 1fr;
			grid-template-areas:
				"site-nav social"
				"contact contact";
		}
	}
	@media (min-width: 1024px) {
		.links {
			grid-template-columns: 250px 250px 250px;
			grid-template-areas: "site-nav social contact";
			margin-top: 2rem;
		}
		.contact-details a:first-of-type {
			margin-bottom: 1rem;
			display: block;
		}
	}
</style>
