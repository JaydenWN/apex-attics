---
const { title, text } = Astro.props;
import Button from "./Button.astro";
import PhoneIcon from "@icons/call-white.svg";
import MessageIcon from "@icons/contact-white.svg";
---

<header>
    <div class="container">
        <h1>{title}</h1>
        <p>{text}</p>
        <div class="cta-buttons">
            <Button type="secondary" href="tel:0424 808 378"
                ><PhoneIcon /> Call Us</Button
            >
            <Button type="primary" href="/contact-apex-attics/#contact-form"
                ><MessageIcon /> Get a quote</Button
            >
        </div>
    </div>
</header>

<style>
    header {
        background-color: var(--blue);
        color: white;
    }
    .container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    p {
        margin-top: 1rem;
    }
    .cta-buttons {
        display: flex;
        gap: 1rem;
    }
    h1 {
        color: white;
    }

    @media (min-width: 768px) {
        .container {
            gap: 3rem;
            width: 68%;
        }
    }

    @media (min-width: 1024px) {
        .container {
            width: 60%;
        }
    }
    @media (min-width: 1440px) {
        .container {
            width: 1280px;
        }
        .container > h1,
        .container > p {
            width: 70%;
        }
    }
</style>
