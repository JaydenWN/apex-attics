---
const { title, text } = Astro.props;
import Button from "./Button.astro";
import PhoneIcon from "@icons/call-white.svg";
import MessageIcon from "@icons/contact-white.svg";
---

<header>
    <div class="container">
        <h1>{title}</h1>
        <p>{text}</p>
        <div class="cta-buttons">
            <Button type="secondary" href="/"><PhoneIcon /> Call Us</Button>
            <Button type="primary" href="/"><MessageIcon /> Get a quote</Button>
        </div>
    </div>
</header>

<style>
    header {
        background-color: var(--blue);
        color: white;
    }
    .container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    p {
        margin-top: 1rem;
    }
    .cta-buttons {
        display: flex;
        gap: 1rem;
    }
    h1 {
        color: white;
    }
</style>
