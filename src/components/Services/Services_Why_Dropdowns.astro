---
import { Image } from "astro:assets";
import carrot from "@icons/plus-orange.svg";

const { whyObject } = Astro.props;
---

<div class="faq">
    {
        whyObject.map((qa) => (
            <details>
                <span>{qa.a}</span>
                <summary>
                    {qa.q}
                    <Image src={carrot} alt="dropdown" class="carrot" />
                </summary>
            </details>
        ))
    }
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    details {
        background-color: white;
        box-shadow: var(--box-shadow);
        padding: 1rem;
        line-height: 2rem;
        border-radius: 8px;
        border: 2px solid var(--orange);
    }
    summary {
        display: flex;
        justify-content: space-between;
        font-family: "heading";
        line-height: 1.3em;
        color: var(--blue);
    }
    details[open] summary {
        margin-bottom: 1rem;
    }

    .faq {
        display: flex;
        flex-direction: column;
        gap: 0.55rem;
    }
    .carrot {
        width: 16px;
        height: 16px;
    }

    @media (min-width: 1024px) {
        details {
            cursor: pointer;
        }
    }
</style>
